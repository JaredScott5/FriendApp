<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.friendapp.QuestionActivity"
    android:background="@color/orange">

    <ListView
        android:id="@+id/list"
        android:background="@drawable/list_border"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:listSelector="@drawable/list_color_selector"
        android:divider="#000000"
        android:dividerHeight="3dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What Are Your Interests?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/list"
        android:layout_alignStart="@+id/list"
        android:textColor="#000000" />


</RelativeLayout>