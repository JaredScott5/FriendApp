<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.friendapp.QuestionActivity"
    android:background="@drawable/puzzle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What kind of things do you like to do?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:columnCount="8"
        android:rowCount="45">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:id="@+id/musicSwitch"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="#FFFFFF" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Making Friends"
            android:id="@+id/friendSwitch"
            android:layout_row="2"
            android:layout_column="7"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museums"
            android:id="@+id/museumSwitch"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:id="@+id/movieSwitch"
            android:layout_row="3"
            android:layout_column="7"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel"
            android:id="@+id/travelSwitch"
            android:layout_row="4"
            android:layout_column="1"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise"
            android:id="@+id/exerciseSwitch"
            android:layout_row="4"
            android:layout_column="7"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Board Games"
            android:id="@+id/gameSwitch"
            android:layout_row="5"
            android:layout_column="1"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:id="@+id/sportsSwitch"
            android:layout_row="5"
            android:layout_column="7"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Politics"
            android:id="@+id/politicsSwitch"
            android:layout_row="6"
            android:layout_column="1"
            android:textColor="#FFFFFF"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horoscope"
            android:id="@+id/horoscopeSwitch"
            android:layout_row="6"
            android:layout_column="7"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/saveButton"
            android:src="@drawable/list2"
            android:layout_below="@+id/descriptionText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_row="10"
            android:layout_column="1"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/profileButton"
            android:src="@drawable/update"
            android:layout_alignBottom="@+id/quizButton"
            android:layout_centerHorizontal="true"
            android:layout_row="10"
            android:layout_column="7"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Save Interests"
            android:id="@+id/textView2"
            android:layout_row="16"
            android:layout_column="1"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Return to Profile"
            android:id="@+id/textView3"
            android:layout_row="16"
            android:layout_column="7"
            android:textColor="#FFFFFF"/>

    </GridLayout>


</RelativeLayout>