<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context="com.android.friendapp.sign_up">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/title_v"
            android:layout_alignParentTop="true"
            android:text="@string/signUpS"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:id="@+id/emailText"
            android:hint="Email"
            android:backgroundTint="@color/white"
            android:layout_below="@+id/title_v"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:id="@+id/passText"
            android:layout_below="@+id/emailText"
            android:hint="Password"
            android:backgroundTint="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:id="@+id/passVText"
            android:layout_below="@+id/passText"
            android:hint="Password Verification"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/signUpS"
            android:id="@+id/SignUpB"
            android:layout_below="@+id/passVText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
