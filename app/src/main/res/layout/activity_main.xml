<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/fall_leaves_2">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:id="@+id/email_t"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:backgroundTint="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:id="@+id/password_t"
        android:layout_below="@+id/email_t"
        android:hint="Password"
        android:backgroundTint="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Log In"
        android:id="@+id/logIn_B"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/password_t"
        android:layout_alignEnd="@+id/password_t"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sign-up"
        android:id="@+id/signIn_B"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />


</RelativeLayout>
