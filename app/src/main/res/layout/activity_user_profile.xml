<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context="com.android.friendapp.user_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/txtuser"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_img"
        android:layout_toEndOf="@+id/profile_img" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_img"
        android:src="@drawable/no_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Log Out"
        android:id="@+id/logOutB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/quizButton"
        android:src="@drawable/no_image"
        android:layout_above="@+id/logOutB"
        android:layout_alignRight="@+id/logOutB"
        android:layout_alignEnd="@+id/logOutB"
        android:layout_marginBottom="41dp" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/updateButton"
        android:src="@drawable/no_image"
        android:layout_alignBottom="@+id/quizButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/findButton"
        android:src="@drawable/no_image"
        android:layout_alignTop="@+id/updateButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name"
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/findButton"
        android:layout_alignEnd="@+id/findButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/locationText"
        android:layout_below="@+id/txtuser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Users Nearby: X"
        android:id="@+id/nearbyText"
        android:layout_alignBottom="@+id/profile_img"
        android:layout_alignRight="@+id/locationText"
        android:layout_alignEnd="@+id/locationText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View/Edit\nInterests"
        android:id="@+id/textQuiz"
        android:layout_below="@+id/findButton"
        android:layout_alignLeft="@+id/quizButton"
        android:layout_alignStart="@+id/quizButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update\nProfile"
        android:id="@+id/textUpdate"
        android:layout_below="@+id/findButton"
        android:layout_toRightOf="@+id/profile_img"
        android:layout_toEndOf="@+id/profile_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Friend\nFinder"
        android:id="@+id/textFriends"
        android:layout_below="@+id/findButton"
        android:layout_alignLeft="@+id/findButton"
        android:layout_alignStart="@+id/findButton"
        android:layout_alignRight="@+id/findButton"
        android:layout_alignEnd="@+id/findButton"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Yourself:"
        android:id="@+id/aboutText"
        android:layout_below="@+id/profile_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="30 word count description of the users choice to introduce and describe themselves outside of their interests and quiz answers blah blah blah baadflkadf  asdfjasdfa adfasdjfadfa  dfdfd  adfadf "
        android:id="@+id/descriptionText"
        android:layout_below="@+id/aboutText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
