<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/puzzle"
    tools:context="com.android.friendapp.user_profile">

    <com.parse.ParseImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_img"
        android:src="@drawable/no_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Log Out"
        android:id="@+id/logOutB"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/quizButton"
        android:src="@drawable/list2"
        android:layout_below="@+id/descriptionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/updateButton"
        android:src="@drawable/update"
        android:layout_alignBottom="@+id/quizButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/findButton"
        android:src="@drawable/finder"
        android:layout_alignTop="@+id/updateButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/locationText"
        android:layout_below="@+id/txtuser"
        android:layout_alignRight="@+id/txtuser"
        android:layout_alignEnd="@+id/txtuser"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View/Edit\n Interests"
        android:id="@+id/textQuiz"
        android:layout_below="@+id/findButton"
        android:layout_alignLeft="@+id/quizButton"
        android:layout_alignStart="@+id/quizButton"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update\nProfile"
        android:id="@+id/textUpdate"
        android:layout_below="@+id/findButton"
        android:layout_toRightOf="@+id/profile_img"
        android:layout_alignStart="@id/updateButton"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Friend\nFinder"
        android:id="@+id/textFriends"
        android:layout_below="@+id/findButton"
        android:layout_alignLeft="@+id/findButton"
        android:layout_alignStart="@+id/findButton"
        android:layout_alignRight="@+id/findButton"
        android:layout_alignEnd="@+id/findButton"
        android:layout_marginLeft="12dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Yourself:"
        android:id="@+id/aboutText"
        android:layout_below="@+id/profile_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/descriptionText"
        android:layout_below="@+id/aboutText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name"
        android:id="@+id/txtuser"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/findButton"
        android:layout_alignEnd="@+id/findButton"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
