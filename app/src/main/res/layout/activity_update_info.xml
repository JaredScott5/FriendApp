<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context="com.android.friendapp.update_info_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/title_vi"
        android:layout_alignParentTop="true"
        android:text="Update Info"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:id="@+id/uploadName"
        android:hint="Name"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/title_vi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Date of Birth"
        android:id="@+id/dobButton"
        android:layout_below="@+id/uploadName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showDatePickerDialog"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textColor="@color/white"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/uploadAbout"
        android:layout_below="@+id/dobButton"
        android:layout_centerHorizontal="true"
        android:hint="About Me"
        android:backgroundTint="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Save and Update"
        android:id="@+id/updateButton"
        android:layout_below="@+id/uploadAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:id="@+id/uploadPhotoButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
